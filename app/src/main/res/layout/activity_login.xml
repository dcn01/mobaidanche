<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.shequn.liming.mobaidanche.ui.login.LoginActivity">


    <ImageView
        android:id="@+id/iv_close"
        android:src="@mipmap/common_ab_close_black"
        android:layout_marginLeft="30px"
        android:layout_marginTop="65px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <TextView
        android:id="@+id/tv_temp1"
        android:textColor="@android:color/black"
        android:text="手机验证"
        android:layout_marginLeft="60px"
        android:layout_below="@id/iv_close"
        android:layout_marginTop="65px"
        android:textSize="80px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/temp2"
        android:text="请输入您的手机号码，\n登录或注册您的摩拜单车账号"
        android:textSize="40px"
        android:layout_marginTop="30px"
        android:layout_marginLeft="60px"
        android:layout_below="@id/tv_temp1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <LinearLayout
        android:id="@+id/ll_phone"
        android:layout_marginTop="65px"
        android:layout_below="@id/temp2"
        android:layout_marginRight="35px"
        android:layout_marginLeft="35px"
        android:background="#F2F2F2"
        android:layout_width="match_parent"
        android:layout_height="135px">


        <TextView
            android:paddingLeft="20px"
            android:gravity="center_vertical"
            android:textSize="42px"
            android:text="+86"
            android:layout_width="190px"
            android:layout_height="match_parent"
            android:drawableRight="@mipmap/map_info_window_arrow"/>

        <EditText
            android:id="@+id/et_phone"
            android:maxLength="11"
            android:textSize="42px"
            android:inputType="number"
            android:paddingLeft="75px"
            android:hint="请输入手机号码"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_code"
        android:layout_marginTop="30px"
        android:layout_below="@id/ll_phone"
        android:layout_marginRight="35px"
        android:layout_marginLeft="35px"
        android:background="#F2F2F2"
        android:layout_width="640px"
        android:layout_height="135px">


        <TextView
            android:paddingLeft="20px"
            android:gravity="center_vertical"
            android:textSize="42px"
            android:text="验证码"
            android:layout_width="190px"
            android:layout_height="match_parent"
            />

        <EditText
            android:id="@+id/et_code"
            android:maxLength="4"
            android:textSize="42px"
            android:inputType="number"
            android:paddingLeft="75px"
            android:hint="请输入验证码"
            android:background="@null"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="match_parent" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_get_code"
        android:textSize="42px"
        android:background="#d9d9d9"
        android:textColor="@android:color/white"
        android:gravity="center"
        android:layout_marginRight="35px"
        android:layout_alignTop="@id/ll_code"
        android:layout_toRightOf="@id/ll_code"
        android:text="获取验证码"
        android:layout_width="match_parent"
        android:layout_height="135px" />


    <TextView
        android:id="@+id/tv_call_code"
        android:layout_marginTop="30px"
        android:layout_marginLeft="60px"
        android:layout_below="@id/tv_get_code"
        android:textColor="@android:color/holo_red_light"
        android:text="收不到短信，试试语音验证码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_ok"
        android:textSize="50px"
        android:gravity="center"
        android:background="#D9D9D9"
        android:text="@android:string/ok"
        android:textColor="@android:color/white"
        android:layout_marginTop="55px"
        android:layout_marginRight="35px"
        android:layout_marginLeft="35px"
        android:layout_below="@id/tv_call_code"
        android:layout_width="match_parent"
        android:layout_height="135px" />

    <TextView
        android:layout_marginTop="50px"
        android:layout_below="@id/tv_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />



    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginRight="35px"
        android:layout_marginLeft="35px"
        android:layout_marginBottom="240px"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <View
            android:layout_marginRight="30px"
            android:background="#A3A3A3"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="1px"/>


        <TextView
            android:textColor="#A0A0A0"
            android:textSize="30px"
            android:text="社用社交账号一键登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:layout_marginLeft="30px"
            android:background="#A3A3A3"
            android:layout_weight="1"
            android:layout_width="0px"
            android:layout_height="1px"/>

    </LinearLayout>


    <View
        android:id="@+id/temp3"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_width="0px"
        android:layout_height="0px"
        />


    <ImageView
        android:layout_marginRight="75px"
        android:src="@mipmap/wechat_loging_icon"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@id/temp3"
        android:layout_width="wrap_content"
        android:layout_height="240px" />


    <ImageView
        android:layout_marginLeft="75px"
        android:src="@mipmap/qq_login_icon"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/temp3"
        android:layout_width="wrap_content"
        android:layout_height="240px" />



    <com.shequn.liming.mobaidanche.widget.LoadingToastView
        android:visibility="gone"
        android:id="@+id/loadView"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>



</RelativeLayout>
